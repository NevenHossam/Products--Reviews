@using review_v2.ViewModel
@if (TempData["ValidationMessage"] != null)
{
    <div class="form-group">
        <div class="col-xs-12">
            @if (((ValidationMessage)TempData["ValidationMessage"]).Success)
            {
                <div class="alert alert-success">
                    <i class="ti-check"></i> @(((ValidationMessage)TempData["ValidationMessage"]).Message)
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="ti-close"></i> @(((ValidationMessage)TempData["ValidationMessage"]).Message)
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
            }
        </div>
    </div>


}


